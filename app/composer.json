{
    "name": "friendsofcake2/app",
    "description": "CakePHP 2 Application skeleton",
    "type": "project",
    "keywords": ["cakephp", "skeleton"],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "friendsofcake2/cakephp": "^2.10"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^5.0",
        "phpunit/phpunit": "^9.6"
    },
    "config": {
        "vendor-dir": "Vendor/",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "installer-paths": {
            "Plugin/{$name}/": ["type:cakephp-plugin"]
        }
    }
}
